
#
# Bootloader config
#
CONFIG_BOOTLOADER_OFFSET_IN_FLASH=0x1000
CONFIG_BOOTLOADER_COMPILER_OPTIMIZATION_SIZE=y

CONFIG_FREERTOS_ENABLE_BACKWARD_COMPATIBILITY=y
CONFIG_FREERTOS_HZ=1000

#
# Serial flasher config
#
CONFIG_ESPTOOLPY_HEADER_FLASHSIZE_UPDATE=y
CONFIG_ESPTOOLPY_BEFORE_RESET=y
# end of Serial flasher config

#
# Partition Table
#
CONFIG_PARTITION_TABLE_SINGLE_APP_LARGE=y
CONFIG_PARTITION_TABLE_MD5=y
# end of Partition Table

# I2C slave driver version 2 (provides received data length in callback)
CONFIG_I2C_ENABLE_SLAVE_DRIVER_VERSION_2=y
# end of Partition Table

# Play MP3 Control - I2C Slave Control defaults
CONFIG_PLAY_MP3_I2C_SLAVE_PORT_1=y
CONFIG_PLAY_MP3_I2C_SLAVE_ADDR=0x42
CONFIG_PLAY_MP3_I2C_SLAVE_SDA_GPIO=21
CONFIG_PLAY_MP3_I2C_SLAVE_SCL_GPIO=22

# Suppress ESP-IDF legacy touch driver deprecation #warning (build uses -Werror)
CONFIG_TOUCH_SUPPRESS_DEPRECATE_WARN=y
